<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/system_setting_titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:title="@string/system_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/lv_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="通知与提醒" />

        <Switch
            android:id="@+id/switch_remind_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_weight="1"
            android:checked="false"
            android:theme="@style/SwitchStyle" />
        <!--        <ImageView-->
        <!--            android:id="@+id/iv_online_chat"-->
        <!--            android:layout_width="@dimen/dp_12"-->
        <!--            android:layout_height="@dimen/dp_12"-->
        <!--            android:layout_weight="1"-->
        <!--            android:src="@mipmap/goin" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_permission"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/lv_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="权限设置" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_weight="1"
            android:src="@mipmap/goin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/lv_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="修改手机号码" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_weight="1"
            android:src="@mipmap/goin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_black_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/lv_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="黑名单" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_weight="1"
            android:src="@mipmap/goin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_feed_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/lv_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="意见反馈" />

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_weight="1"
            android:src="@mipmap/goin" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_146"
        android:layout_marginRight="@dimen/dp_32"
        android:text="确定" />

</LinearLayout>