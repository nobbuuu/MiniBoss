<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical"
    tools:context=".mine.ui.PhoneNumberActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_user_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:onClick="GoBack"
        />
    <com.ruffian.library.widget.RTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改手机号"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/dark"
        android:textSize="@dimen/sp_32"/>
    <com.ruffian.library.widget.RTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已发送4位验证码至13984698001"
        android:layout_marginLeft="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_24"
            android:src="@mipmap/arealicon"/>

        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入新手机号码"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:inputType="phone"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_verify_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="获取验证码"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/shap_button_radius"
        android:onClick="GetVerifyCode"
        />
</LinearLayout>